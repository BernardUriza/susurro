# Susurro Development Environment Variables
# Copy this file to .env.local and configure your backends

# Backend Configuration (for local development)
VITE_WHISPER_BACKEND_URL=http://localhost:8000

# Deepgram Configuration (optional)
# Get your API key from: https://console.deepgram.com
# VITE_DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Backend selection preferences
VITE_FORCE_BACKEND=false    # Set to 'true' to force backend usage
VITE_FORCE_CLIENT=false     # Set to 'true' to force client-side processing

# Default model and language
VITE_DEFAULT_WHISPER_MODEL=base
VITE_DEFAULT_LANGUAGE=es