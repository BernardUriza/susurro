{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "WebWorker"],
    "moduleResolution": "node",
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "inlineSourceMap": true
  },
  "include": ["workers/**/*.ts"],
  "exclude": ["node_modules"]
}