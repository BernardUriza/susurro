{
  "name": "susurro-whisper-nextjs",
  "version": "1.0.0",
  "description": "WAV file transcription using Whisper AI with Transformers.js for Next.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "npm run dev:package & npm run dev:next",
    "dev:next": "next dev",
    "dev:package": "npm -w @susurro/core run dev",
    "build": "npm run build:package && next build",
    "build:package": "npm -w @susurro/core run build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run test/e2e",
    "test:e2e:puppeteer": "vitest run test/e2e/puppeteer-transcription.test.ts",
    "test:unit": "vitest run test/unit",
    "coverage": "vitest run --coverage",
    "build-lib": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "clean": "rmdir /s /q dist 2>nul || echo No dist folder",
    "build:esm": "esbuild src/index.ts --bundle --minify --format=esm --outfile=dist/index.mjs --external:react --external:react-dom --external:next --external:@xenova/transformers --external:sweetalert2",
    "build:cjs": "esbuild src/index.ts --bundle --minify --format=cjs --outfile=dist/index.js --external:react --external:react-dom --external:next --external:@xenova/transformers --external:sweetalert2",
    "build:types": "tsc --project tsconfig.lib.json --emitDeclarationOnly",
    "prepublishOnly": "npm run build-lib"
  },
  "keywords": [
    "whisper",
    "speech-to-text",
    "transformers",
    "nextjs",
    "react",
    "ai",
    "transcription"
  ],
  "author": "Bernard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BernardUriza/susurro.git"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@react-three/drei": "^10.6.0",
    "@react-three/fiber": "^9.2.0",
    "@susurro/core": "file:./packages/susurro",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "puppeteer": "^24.15.0",
    "sweetalert2": "^11.22.2",
    "three": "^0.178.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "copy-webpack-plugin": "^13.0.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "next": "^15.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.5.3",
    "vite": "^7.0.6"
  }
}
