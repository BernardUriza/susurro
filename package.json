{
  "name": "susurro-transcription-studio",
  "version": "2.0.0",
  "description": "Professional real-time voice transcription studio powered by Whisper AI and Murmuraba - Stream, transcribe, and export speech with advanced audio processing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "npm run copy:wasm && concurrently -n \"SUSURRO,VITE,WHISPER,DEEPGRAM\" -c \"bgYellow.bold,bgGreen.bold,bgBlue.bold,bgMagenta.bold\" \"npm run dev:package\" \"npm run dev:vite\" \"npm run dev:backend\" \"npm run dev:deepgram\"",
    "dev:simple": "npm run copy:wasm && vite",
    "dev:vite": "vite",
    "dev:package": "npm -w susurro-audio run dev",
    "dev:backend": "cd backend && python main.py",
    "dev:deepgram": "cd backend-deepgram && python server.py",
    "dev:no-backend": "npm run copy:wasm && concurrently -n \"SUSURRO,VITE\" -c \"bgYellow.bold,bgGreen.bold\" \"npm run dev:package\" \"npm run dev:vite\"",
    "dev:with-whisper": "npm run copy:wasm && concurrently -n \"SUSURRO,VITE,WHISPER\" -c \"bgYellow.bold,bgGreen.bold,bgBlue.bold\" \"npm run dev:package\" \"npm run dev:vite\" \"npm run dev:backend\"",
    "build": "npm run copy:wasm && vite build",
    "build:package": "echo 'Package build skipped - no workspace found'",
    "copy:wasm": "node -e \"const fs=require('fs');const path=require('path');const dir='public/wasm';if(!fs.existsSync(dir))fs.mkdirSync(dir,{recursive:true});fs.copyFileSync('node_modules/murmuraba/dist/rnnoise.wasm',path.join(dir,'rnnoise.wasm'))\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run test/e2e",
    "test:e2e:whisper": "vitest run test/e2e/whisper-pipeline.test.ts",
    "test:e2e:auto": "node scripts/run-e2e-test.js",
    "test:e2e:puppeteer": "vitest run test/e2e/puppeteer-transcription.test.ts",
    "test:unit": "vitest run test/unit",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "analyze": "node scripts/analyze-project.js",
    "analyze:dead-code": "knip --config config/knip.config.ts",
    "validate-cleanup": "node scripts/cleanup-validation.js",
    "getmedium": "node scripts/download-whisper-tiny.js",
    "getmedium:force": "node scripts/download-whisper-tiny.js --force",
    "migration:detect-legacy": "grep -r --exclude-dir=node_modules -v '//.*MediaRecorder\\|//.*processAudioFile\\|/\\*.*MediaRecorder\\|/\\*.*processAudioFile' packages/susurro/src/ | grep -E 'MediaRecorder\\b|getUserMedia\\b|ondataavailable\\b|processAudioFile\\s*[\\(:]' && echo 'LEGACY DETECTED' || echo 'LEGACY EXTINCT'",
    "build-lib": "npm run clean && npm run build:types",
    "clean": "rmdir /s /q dist 2>nul || echo No dist folder",
    "build:types": "tsc --project config/tsconfig.lib.json --emitDeclarationOnly",
    "prepublishOnly": "npm run build-lib"
  },
  "keywords": [
    "whisper",
    "speech-to-text",
    "neural-audio",
    "conversational-ai",
    "real-time-transcription",
    "react",
    "ai",
    "transcription",
    "murmuraba",
    "voice-activity-detection"
  ],
  "author": "Bernard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BernardUriza/susurro.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@susurro/core": "file:./packages/susurro",
    "eslint-config-prettier": "^10.1.8",
    "framer-motion": "^12.23.12",
    "murmuraba": "^3.0.3",
    "react-virtuoso": "^4.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "events": "^3.3.0",
    "happy-dom": "^18.0.1",
    "knip": "^5.43.0",
    "process": "^0.11.10",
    "puppeteer": "^24.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.5.3",
    "util": "^0.12.5",
    "vite": "^7.0.6",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^3.2.4"
  }
}
