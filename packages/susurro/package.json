{
  "name": "@susurro/core",
  "version": "1.0.0",
  "description": "Audio processing and transcription library for web applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "audio",
    "transcription",
    "whisper",
    "speech-to-text",
    "web-audio",
    "murmuraba",
    "vad"
  ],
  "author": "Bernard Uriza Orozco",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "murmuraba": ">=2.0.0",
    "@xenova/transformers": ">=2.0.0"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.24"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/susurro"
  },
  "publishConfig": {
    "access": "public"
  }
}